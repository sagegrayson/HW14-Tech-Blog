<main class="text-center" id="main">
	<div
		class="d-flex flex-column min-vh-100 justify-content-center align-items-center"
	>
		<body class="text-center">
			<form class="login-form">
				<h1 class="h3 mb-3 font-weight-normal text-light">
					Log In
				</h1>
				<input
					type="email"
					id="email"
					class="h3 form-control"
					name="login"
					placeholder="Email"
				/>
				<input
					type="text"
					id="password"
					class="h3 form-control"
					name="login"
					placeholder="Password"
				/>

				<a href="/signup" class="btn btn-lg btn-secondary btn-block">
					Create Account
				</a>

				<input
					type="submit"
					class="btn btn-lg btn-primary btn-block"
					value="Go"
				/>

			</form>
		</body>
	</div>
	<script src="/js/login.js"></script>
</main>